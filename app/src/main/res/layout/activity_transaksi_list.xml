<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/two_color_background"
    tools:context=".transaksi.TransaksiListActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Transaksi"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="322dp"
        android:layout_height="41dp"
        android:background="@drawable/rounded_square_white"
        android:layout_marginTop="70dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/bt_belum"
                android:layout_width="161dp"
                android:layout_height="46dp"
                android:backgroundTint="@color/green"
                android:text="Belum Diangkut"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/bt_sudah"
                android:layout_width="161dp"
                android:layout_height="46dp"
                android:backgroundTint="@color/white"
                android:text="Selesai"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>







</androidx.constraintlayout.widget.ConstraintLayout>