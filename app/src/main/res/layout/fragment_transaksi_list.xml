<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/two_color_background"
    tools:context=".transaksi.TransaksiListFragment">


    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="322dp"
        android:layout_height="41dp"
        android:layout_marginTop="130dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/bt_belum"
                android:layout_width="161dp"
                android:layout_height="46dp"
                android:backgroundTint="@color/green"
                android:text="Belum Diangkut"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/bt_sudah"
                android:layout_width="161dp"
                android:layout_height="46dp"
                android:backgroundTint="@color/white"
                android:text="Selesai"
                android:textAllCaps="false"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_transaksi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:navGraph="@navigation/nav_pengguna"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame2" />


</androidx.constraintlayout.widget.ConstraintLayout>