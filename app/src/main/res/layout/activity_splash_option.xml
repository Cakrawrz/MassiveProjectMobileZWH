<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashOptionActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/two_color_background">

        <TextView
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="153dp"
            android:layout_marginEnd="91dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Mulai Sekarang !!!"
            android:textColor="#00AF5C"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="214dp"
            android:layout_marginEnd="123dp"
            android:src="@drawable/img_logo" />

        <Button
            android:id="@+id/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_logo"
            android:layout_alignBottom="@+id/splash_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="-89dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Daftar Sebagai Pelanggan"
            android:backgroundTint="@color/green"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/myButton"
            android:layout_alignEnd="@+id/myButton"
            android:layout_alignBottom="@+id/myButton"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="164dp"
            android:layout_marginLeft="61dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="-30dp"
            android:fontFamily="@font/poppinsregular"
            android:text="Atau"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/myButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/splash_logo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="29dp"
            android:layout_marginTop="-78dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="-173dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="Daftar Sebagai Pengepul"
            android:backgroundTint="@color/green"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>