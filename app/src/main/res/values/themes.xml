<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MassiveProjectMobileZWH.light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorSecondary">@color/green</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ButtonNext" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ButtonSubNext" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_secondary_button</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="TextBottomNav" parent="TextAppearance.MaterialComponents.Button">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBottomNavOff" parent="TextAppearance.MaterialComponents.Button">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Theme.MassiveProjectMobileZWH.light" parent="Base.Theme.MassiveProjectMobileZWH.light" />
</resources>