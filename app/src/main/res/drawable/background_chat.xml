<!-- res/drawable/two_color_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna putih di bawah (ukuran penuh) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00AF5C" />
        </shape>
    </item>

    <!-- Warna di atas (ukuran kecil) -->
    <item android:top="70dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <!-- Tambahkan elemen stroke untuk border -->
            <stroke
                android:width="20dp"
                android:color="#ffffff" />
        </shape>
    </item>
</layer-list>